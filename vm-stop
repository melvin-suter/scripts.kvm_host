#!/bin/bash

NAME=$1
P=$$
LANG=C

echo $NAME | egrep -q '^vm[0-9][0-9]$' || (echo Usage: $(basename $0) vmNN ; kill -9 $P )
virsh list | grep $NAME || (echo ERROR: $NAME not running ; kill -9 $P )

if [[ $2 != "--now" ]] ; then
  echo "GOING TO STOP $NAME"
  echo "ctrl-c now!"
  sleep 5
fi

virsh destroy $NAME > /dev/null
